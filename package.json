{
  "name": "nest-playground",
  "version": "0.0.1",
  "type": "commonjs",
  "description": "Pet-project",
  "author": {
    "name": "Mykhailo Teplyi",
    "email": "mykhailo.teplyi@gmail.com",
    "url": "https://github.com/mteplyi"
  },
  "license": "BSD-3-Clause",
  "packageManager": "pnpm@8.8.0+md5.a3d46744c021cc208dd122019bfa92b0",
  "engines": {
    "node": "~18.17",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "config": {
    "eslintExts": "js,cjs,mjs,ts,cts,mts,json,jsonc,json5",
    "jsoncFiles": [
      ".vscode/{settings,tasks,launch,extensions}.json",
      "tsconfig*(.*).json"
    ]
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint:base": "eslint_d --cache --fix",
    "lint:stop": "eslint_d stop",
    "lint": "$npm_package_scripts_lint_base --ignore-path=.gitignore --ext=$npm_package_config_eslintExts .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json",
    "prepare": "husky install",
    "pre-commit": "lint-staged --allow-empty"
  },
  "dependencies": {
    "@nestjs/common": "^10.2.6",
    "@nestjs/core": "^10.2.6",
    "@nestjs/platform-express": "^10.2.6",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.18",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.6",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/lint-staged": "^13.2.0",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.13",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-n": "^16.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "eslint_d": "^12.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsonc-eslint-parser": "^2.3.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
